<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GetStartedText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/aldrich</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="btn_image_your_plan">
        <item name="android:background">@drawable/btn_image_your_plan</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

    <style name="btn_frequency_your_plan">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/btn_your_plan_frequency</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="btn_frequency_your_plan.selected">
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:background">@drawable/btn_your_plan_frequency_selected</item>
    </style>

    <style name="title_your_plan_text">
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="title_your_plan_text.smallerText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_selected_extras">
        <item name="android:background">@drawable/btn_selected_extras_custom</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
