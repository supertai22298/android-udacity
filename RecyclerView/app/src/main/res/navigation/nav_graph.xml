<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/studentFragment">

    <fragment
            android:id="@+id/studentFragment"
        android:name="com.example.recyclerview.StudentFragment"
        android:label="fragment_student"
        tools:layout="@layout/fragment_student">
        <action
            android:id="@+id/action_studentFragment_to_studentDetail"
            app:destination="@id/studentDetail"
            app:enterAnim="@android:anim/slide_in_left" />
    </fragment>
    <fragment
        android:id="@+id/studentDetail"
        android:name="com.example.recyclerview.StudentDetail"
        android:label="student_detail_fragment"
        tools:layout="@layout/student_detail_fragment" />
</navigation>